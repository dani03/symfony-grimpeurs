<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}toot!{% endblock %}</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body style="margin:auto;">
    <div class="container" >
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">Accueil</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    {% if not app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('app_login') }}">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('app_register') }}">Inscription</a>
                        </li>
                    {% else %}
                        <li> <a class="nav-link" href="{{ url('app_logout') }}">deconnexion</a></li>
                        {% if is_granted('ROLE_GOLD') %}
                            <li> <a class="nav-link" href="{{ url('jpo_create') }}">creer une journ√©e porte ouverte</a></li>
                        {% endif %}

                        <li> <a class="nav-link">{{app.user ? 'Bonjour ': ''  }} {{  app.user ? app.user.firstname :  ''}}</a></li>
                    {% endif %}

                </ul>
            </div>
        </nav>
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
