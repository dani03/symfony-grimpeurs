{% extends 'base.html.twig' %}

{% block body %}



    <div class="form-row mt-5">
        <div class="col-md-6 offset-md-3 align-self-center">
            <div style="border:1px solid black;border-radius:6px;">
                <div class="card text-center">
                    <h1 class="card-header">Crée une journée porte ouverte</h1>
                    <div class="card-body">
                        {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}
                        <p>
                            {{form_label(form.lieu, 'lieu de l\'evenement :')}}
                            {{form_widget(form.lieu)}}
                            {{form_errors(form.lieu)}}
                        </p>
                        <p>
                            {{form_label(form.title, 'titre de la journée :')}}
                            {{form_widget(form.title)}}
                            {{form_errors(form.title)}}
                        </p>
                        <p>
                            {{form_label(form.places, 'nombres de places :')}}
                            {{form_widget(form.places)}}
                            {{form_errors(form.places)}}
                        </p>

                        <div class="justify-content-center">
                            <input id="submit_button" type="submit" class="btn btn-primary" value="Envoyer">
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
